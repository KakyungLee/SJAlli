<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp"
    android:background="@color/backgroundColor">

    <TextView
        android:id="@+id/detailTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Title"
        android:textSize="12pt"
        android:textStyle="bold"
        android:textColor="@color/mainColor"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp">

        <ImageView
            android:id="@+id/detailImage"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:src="@drawable/basic_image"
            android:scaleType="fitXY"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="8dp">

            <TextView
                android:id="@+id/smallTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Title"
                android:textSize="10pt"
                android:textColor="@color/mainColor"/>
            <TextView
                android:id="@+id/smallHost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Host"/>
            <TextView
                android:id="@+id/smallDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="~ 2016_12_20 (TUE)"/>


        </LinearLayout>

    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Total Information"
        android:textColor="@color/mainColor"
        android:textStyle="bold"
        android:textSize="10pt"
        android:layout_marginBottom="3dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Attend Condition"
        android:textColor="@color/textTitle"/>
    <TextView
        android:id="@+id/attendCondition"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nothing"
        android:layout_marginBottom="3dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Contents"
        android:textColor="@color/textTitle"/>
    <TextView
        android:id="@+id/contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nothing"
        android:layout_marginBottom="3dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Benefits"
        android:textColor="@color/textTitle"/>
    <TextView
        android:id="@+id/benefits"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nothing"
        android:layout_marginBottom="3dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Date"
        android:textColor="@color/textTitle"/>
    <TextView
        android:id="@+id/date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nothing"
        android:layout_marginBottom="3dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Reception"
        android:textColor="@color/textTitle"/>
    <TextView
        android:id="@+id/reception"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nothing"
        android:layout_marginBottom="3dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Notice"
        android:textColor="@color/textTitle"/>
    <TextView
        android:id="@+id/notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nothing"
        android:layout_marginBottom="3dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="* Contact Information"
        android:textColor="@color/textTitle"/>
    <TextView
        android:id="@+id/contactInformation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Nothing"
        android:layout_marginBottom="3dp"/>


</LinearLayout>